# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,ts}]
charset = utf-8

# python 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# js 2 space indentation
[*.{js,ts,tsx,jsx,json}]
indent_style = space
indent_size = 4

# stylesheets 2 space indentation
[*.{css,styl,scss,sass,less}]
indent_style = space
indent_size = 2

# pug 2 space indentation
[*.{pug,jade}]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[.travis.yml]
indent_style = space
indent_size = 2
